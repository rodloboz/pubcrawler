<div id="pub-<%= pub.id %>" class="card-row">
<div class="card">
  <div class="wrapper" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= pub.photo || "https://tvseriescritic.files.wordpress.com/2016/10/stranger-things-bicycle-lights-children.jpg" %>) center / cover no-repeat;">
    <div class="header">
      <div class="date">
        <span class="day"><%= pub.created_at.strftime("%d") %></span>
        <span class="month"><%= pub.created_at.strftime("%b") %></span>
        <span class="year"><%= pub.created_at.strftime("%Y") %></span>
      </div>
      <ul class="menu-content">
        <li>
          <a href="#">
            <%= icon("far", "bookmark") %>
          </a>
        </li>
        <li>
          <%= icon(current_user.likes?(pub) ? "fas" : "far" , "heart") %>
        <li>
          <a href="#">
            <%= icon("far", "comment") %>
          </a>
      </ul>
    </div>
    <div class="data">
      <div class="content">
        <span class="author"><%= pub.district %></span>
        <h1 class="title"><a href="#"><%= pub.name %></a></h1>
        <p class="text"><%= pub.description.truncate(105) if pub.description %></p>
        <%= link_to "Read more", pub, class: "button", remote: true %>
      </div>
    </div>
  </div>
</div>
</div>
